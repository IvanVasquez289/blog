<h2 class="text-center mb-4 mt-4">Crea una nueva categoria</h2>
<div class="container">
  <%= render 'shared/errors' , obj: @category%>
  <div class="row justify-content-center text-center">
    <div class="col-10">
      <%= form_with(model: @category, class:"shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="row mb-3">
          <%= f.label :name , 'Nombre de la categoria' , class:"col-sm-2 col-form-label text-light fw-bold"%>
          <div class="col-sm-10">
            <%= f.text_field :name ,class:"form-control shadow rounded", placeholder:"Introduzca un nombre de usuario"%>
          </div>
        </div>

        <div>
          <%= f.submit class:"btn btn-outline-light btn-lg"%>
        </div>
      <%end%>
    </div>
    <div class="mb-4">
      <%= link_to " [ Cancelar y regresar al listado de articulos ]", articles_path(), class:"text-decoration-none text-dark"%>  
    </div>
  </div>
</div>