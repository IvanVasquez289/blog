<h2 class="text-center mb-4 mt-4">Categorias</h2>

<div class="flickr_pagination">
  <%= will_paginate @categories, :container => false %>
</div>

<div class="container mt-4">
  <% @categories.each do |category| %>
  <div class="row justify-content-center">
    <div class="col-md-4 mb-5">
      <div class="card text-center shadow bg-body rounded">
        <div class="card-body p-4">
          <h5 class="card-title"> <%= link_to category.name, category_path(category), class: "text-success text-decoration-none"%> </h5>         
        </div>
        <div class="card-footer text-muted p-4">
          <small> Creado hace <%= time_ago_in_words(category.created_at) %> , editado hace <%= time_ago_in_words(category.updated_at) %> </small>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>

<div class="flickr_pagination mb-5">
  <%= will_paginate @categories, :container => false %>
</div>