<div class="container">
  <%= render 'shared/errors' , obj: @user%>
  <div class="row justify-content-center text-center">
    <div class="col-10">
      <%= form_with(model: @user, class:"shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="row mb-3">
          <%= f.label :username , class:"col-sm-2 col-form-label text-light fw-bold"%>
          <div class="col-sm-10">
            <%= f.text_field :username ,class:"form-control shadow rounded", placeholder:"Introduzca un nombre de usuario"%>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :email , class:"col-sm-2 col-form-label text-light fw-bold" %>
          <div class="col-sm-10">
            <%= f.email_field :email ,class:"form-control shadow rounded", placeholder:"Introduzca un correo electronico"%>  
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :password , class:"col-sm-2 col-form-label text-light fw-bold" %>
          <div class="col-sm-10">
            <%= f.password_field :password ,class:"form-control shadow rounded", placeholder:"Introduzca una contraseÃ±a"%>  
          </div>
        </div>

        <div>
          <%= f.submit(@user.new_record? ? "Registrarte" : "Actualizar cuenta", class:"btn btn-outline-light btn-lg")%>
        </div>
      <%end%>
    </div>
    <div class="mb-4">
      <%= link_to " [ Cancelar y regresar al listado de articulos ]", articles_path(), class:"text-decoration-none text-dark"%>  
    </div>
  </div>
</div>