<h2 class="text-center mb-4 mt-4">Inicia sesion en Alpha Blog</h2>

<div class="container">
  <div class="row justify-content-center text-center">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, class:"shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>

        <div class="row mb-3">
          <%= f.label :email , class:"col-sm-2 col-form-label text-light fw-bold" %>
          <div class="col-sm-10">
            <%= f.email_field :email ,class:"form-control shadow rounded", placeholder:"Correo electronico"%>  
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :password , class:"col-sm-2 col-form-label text-light fw-bold" %>
          <div class="col-sm-10">
            <%= f.password_field :password ,class:"form-control shadow rounded", placeholder:"Contraseña"%>  
          </div>
        </div>

        <div>
          <%= f.submit "Iniciar sesión", class:"btn btn-outline-light btn-lg"%>
        </div>
      <%end%>
    </div>
    <div class="mb-4">
      <%= link_to " [ Cancelar y regresar al listado de articulos ]", articles_path(), class:"text-decoration-none text-dark"%>  
    </div>
  </div>
</div>