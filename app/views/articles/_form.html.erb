<div class="container">
  <%= render 'shared/errors', obj:@article %>
  <div class="row justify-content-center text-center">
    <div class="col-10">
      <%= form_with(model: @article, class:"shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="row mb-3">
          <%= f.label :titulo , class:"col-sm-2 col-form-label text-light fw-bold"%>
          <div class="col-sm-10">
            <%= f.text_field :title ,class:"form-control shadow rounded", placeholder:"Titulo del articulo"%>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :descripcion , class:"col-sm-2 col-form-label text-light fw-bold" %>
          <div class="col-sm-10">
            <%= f.text_area :description, rows:10 ,class:"form-control shadow rounded", placeholder:"Descripcion del articulo"%>  
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :categoria , class:"col-sm-2 col-form-label text-light fw-bold" %>

          <%# <div class="col-10">
            <%= f.collection_select(:category_ids, Category.all, :id, :name, {:prompt => "Haga su seleccion de la lista de abajo (opcional) "}, 
            {:multiple => true, size:3,class: 'form-select form-control shadow rounded'}) %>
          <%# div %>
          
          <div class="col-10  my-auto">
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <% cb.label(class: "form-check-label input_checkbox") {cb.check_box(class: "checkbox form-check-input mx-3") + cb.text } %>
            <% end %>
          </div>
        </div>

        <div>
          <%= f.submit class:"btn btn-outline-light btn-lg"%>
        </div>
      <%end%>
    </div>
    <div class="mb-4">
      <%= link_to " [ Cancelar y regresar al listado de articulos ]", articles_path(), class:"text-decoration-none text-dark"%>  
    </div>
  </div>
</div>