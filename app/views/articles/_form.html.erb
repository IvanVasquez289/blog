<div class="container">
  <%= render 'shared/errors' %>
  <div class="row justify-content-center text-center">
    <div class="col-10">
      <%= form_with(model: @article, class:"shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="row mb-3">
          <%= f.label :titulo , class:"col-sm-2 col-form-label text-light fw-bold"%>
          <div class="col-sm-10">
            <%= f.text_field :title ,class:"form-control shadow rounded", placeholder:"Titulo del articulo"%>
          </div>
        </div>

        <div class="row mb-3">
          <%= f.label :descripcion , class:"col-sm-2 col-form-label text-light fw-bold" %>
          <div class="col-sm-10">
            <%= f.text_area :description, rows:10 ,class:"form-control shadow rounded", placeholder:"Descripcion del articulo"%>  
          </div>
        </div>

        <div>
          <%= f.submit class:"btn btn-outline-light btn-lg"%>
        </div>
      <%end%>
    </div>
    <%= link_to " [ Cancelar y regresar al listado de articulos ]", articles_path(), class:"text-decoration-none text-dark"%>
  </div>
</div>